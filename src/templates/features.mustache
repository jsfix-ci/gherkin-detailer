<!DOCTYPE HTML>
<html lang="en">
  <head>
    <title>Gherkins Detailer - Features List</title>
    {{> meta}}
  </head>
  <body>
    <header>
      <h1>Gherkins Detailer - Features List</h1>
    </header>

    {{> menu}}

    <main>
      {{#list}}
      <table>
        <thead>
          <tr>
            <th class="col-id">&num;</th>
            <th class="col-data">{{file}}</th>
            <th class="col-data">Similarities</th>
          </tr>
        </thead>
        <tbody>
          {{#features}}
          <tr class="{{class}}">
            <td class="col-id">{{id}}</td>
            <td class="col-data">{{text}}</td>
            <td class="col-data">
              {{#similarities}}
              {{.}}<br/>
              {{/similarities}}
            </td>
          </tr>
          {{/features}}
        </tbody>
      </table>
      {{/list}}
    </main>
    {{> footer}}
  </body>
</html>
