{
  "name": "gherkin-detailer",
  "version": "0.0.1",
  "description": "gherkin-detailer is a tool that check the gherkins included in you project and list them",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "test": "node node_modules/.bin/_mocha --opts ./mocha.opts",
    "test-watch": "node node_modules/.bin/_mocha --watch-extensions spec.ts --watch -R min --opts ./mocha.opts",
    "pre-test-coverage": "mkdir -p fixtures/features/empty-folder/",
    "test-coverage": "npm run pre-test-coverage && node node_modules/nyc/bin/nyc node node_modules/.bin/_mocha --opts ./mocha.opts",
    "test-report": "node node_modules/nyc/bin/nyc report"
  },
  "author": {
    "name": "Alessandro (silversonicaxel) Rabitti",
    "url": "https://github.com/silversonicaxel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silversonicaxel/gherkin-detailer"
  },
  "engines": {
    "node": ">=10.5.0",
    "npm": ">= 6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.2",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "include": [
      "src/class/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "check-coverage": true,
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50
  }
}
