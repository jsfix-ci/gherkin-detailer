{
  "name": "gherkin-detailer",
  "version": "0.1.0",
  "description": "gherkin-detailer is a tool that check the gherkins included in you project and list them",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "test": "node node_modules/.bin/_mocha --opts ./mocha.opts",
    "test-watch": "node node_modules/.bin/_mocha --watch-extensions spec.ts --watch --opts ./mocha.opts",
    "pre-test-coverage": "mkdir -p fixtures/features/empty-folder/",
    "test-coverage": "npm run pre-test-coverage && node node_modules/nyc/bin/nyc node node_modules/.bin/_mocha --opts ./mocha.opts",
    "test-report": "node node_modules/nyc/bin/nyc report",
    "coveralls": "node node_modules/nyc/bin/nyc npm test && node node_modules/nyc/bin/nyc report --reporter=text-lcov | node node_modules/coveralls/bin/coveralls",
    "clean": "rm -rf dist",
    "build": "npm run clean; tsc -p tsconfig.build.json"
  },
  "author": {
    "name": "Alessandro (silversonicaxel) Rabitti",
    "url": "https://github.com/silversonicaxel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silversonicaxel/gherkin-detailer"
  },
  "engines": {
    "node": ">=10.5.0",
    "npm": ">= 6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/del": "^3.0.1",
    "@types/mocha": "^5.2.5",
    "@types/mustache": "^0.8.32",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.4",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "del": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "moment": "^2.23.0",
    "mustache": "^3.0.1",
    "nyc": "^13.1.0",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "nyc": {
    "include": [
      "src/class/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "html",
      "text-lcov"
    ],
    "check-coverage": true,
    "all": true,
    "sourceMap": true,
    "cache": true,
    "instrument": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95
  }
}
