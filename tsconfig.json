{
  "compilerOptions": {
      "lib": [ "es7", "dom" ],
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "inlineSourceMap": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
  ],
  "include": [
      "src/**/*"
  ],
  "compileOnSave": true
}
